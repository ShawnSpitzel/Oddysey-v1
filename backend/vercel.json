{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"
        }
      },
      {
        "src": "backend/main.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/frontend/build/$1"
      },
      {
        "src": "/start_conversation",
        "dest": "/backend/main.py"
      },
      {
        "src": "/receive_response",
        "dest": "/backend/main.py"
      }
    ]
  }
  